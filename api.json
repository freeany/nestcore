{
  "title": "NestCore 用户管理系统 API 文档",
  "version": "1.0.0",
  "description": "基于 NestJS 构建的完整用户管理系统，包含用户CRUD、角色管理、权限控制、操作日志等功能",
  "baseUrl": "http://localhost:3000/api/v1",
  "authentication": {
    "type": "Bearer Token (JWT)",
    "header": "Authorization: Bearer <token>",
    "note": "除了标记为 @Public 的接口外，其他接口都需要JWT认证"
  },
  "roles": {
    "admin": "系统管理员，拥有所有权限",
    "manager": "管理员，可以管理用户和查看日志",
    "user": "普通用户，只能管理自己的信息"
  },
  "apis": {
    "认证模块 (Auth)": {
      "baseRoute": "/auth",
      "endpoints": [
        {
          "method": "POST",
          "path": "/auth/login",
          "summary": "用户登录",
          "public": true,
          "requestBody": {
            "username": "string (required) - 用户名",
            "password": "string (required, min: 6) - 密码"
          },
          "response": {
            "message": "string - 响应消息",
            "access_token": "string - JWT访问令牌",
            "user": {
              "id": "number - 用户ID",
              "username": "string - 用户名",
              "email": "string - 邮箱",
              "roles": "string[] - 用户角色列表",
              "isActive": "boolean - 是否激活"
            }
          }
        },
        {
          "method": "POST",
          "path": "/auth/register",
          "summary": "用户注册",
          "public": true,
          "requestBody": {
            "username": "string (required, min: 3, max: 50) - 用户名",
            "email": "string (required, email format, max: 100) - 邮箱",
            "password": "string (required, min: 6, max: 50) - 密码"
          },
          "response": {
            "message": "string - 响应消息",
            "user": {
              "id": "number - 用户ID",
              "username": "string - 用户名",
              "email": "string - 邮箱"
            }
          }
        },
        {
          "method": "GET",
          "path": "/auth/profile",
          "summary": "获取当前用户信息",
          "roles": ["user", "manager", "admin"],
          "response": {
            "message": "string - 响应消息",
            "data": "CurrentUserInfo - 当前用户信息"
          }
        },
        {
          "method": "POST",
          "path": "/auth/refresh",
          "summary": "刷新令牌",
          "roles": ["user", "manager", "admin"],
          "response": {
            "access_token": "string - 新的JWT访问令牌"
          }
        },
        {
          "method": "POST",
          "path": "/auth/logout",
          "summary": "用户登出",
          "roles": ["user", "manager", "admin"],
          "response": {
            "message": "string - 响应消息"
          }
        }
      ]
    },
    "用户模块 (Users)": {
      "baseRoute": "/users",
      "endpoints": [
        {
          "method": "POST",
          "path": "/users",
          "summary": "创建用户",
          "roles": ["admin"],
          "requestBody": {
            "username": "string (required, min: 3, max: 50) - 用户名",
            "email": "string (required, email format, max: 100) - 邮箱",
            "password": "string (required, min: 6) - 密码",
            "isActive": "boolean (optional, default: true) - 是否激活"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User - 创建的用户信息"
          }
        },
        {
          "method": "GET",
          "path": "/users",
          "summary": "获取用户列表（分页查询）",
          "roles": ["admin", "manager"],
          "queryParams": {
            "username": "string (optional) - 用户名筛选",
            "email": "string (optional) - 邮箱筛选",
            "isActive": "boolean (optional) - 激活状态筛选",
            "page": "number (optional, default: 1, min: 1) - 页码",
            "limit": "number (optional, default: 10, min: 1, max: 100) - 每页数量",
            "sortBy": "string (optional, default: 'createdAt') - 排序字段",
            "sortOrder": "string (optional, default: 'DESC') - 排序方式 ASC|DESC",
            "search": "string (optional) - 全文搜索"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User[] - 用户列表",
            "total": "number - 总数量",
            "page": "number - 当前页码",
            "limit": "number - 每页数量",
            "totalPages": "number - 总页数"
          }
        },
        {
          "method": "GET",
          "path": "/users/me",
          "summary": "获取当前用户信息",
          "roles": ["user", "manager", "admin"],
          "response": {
            "message": "string - 响应消息",
            "data": "User - 用户详细信息"
          }
        },
        {
          "method": "GET",
          "path": "/users/:id/details",
          "summary": "获取用户详细信息（包含统计数据）",
          "roles": ["admin", "manager"],
          "pathParams": {
            "id": "number - 用户ID"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "UserDetails - 用户详细信息和统计数据"
          }
        },
        {
          "method": "GET",
          "path": "/users/:id/logs",
          "summary": "获取用户操作日志",
          "roles": ["admin", "manager"],
          "pathParams": {
            "id": "number - 用户ID"
          },
          "queryParams": {
            "page": "number (default: 1) - 页码",
            "limit": "number (default: 10) - 每页数量"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "OperationLog[] - 操作日志列表"
          }
        },
        {
          "method": "GET",
          "path": "/users/:id/statistics",
          "summary": "获取用户统计信息",
          "roles": ["admin", "manager"],
          "pathParams": {
            "id": "number - 用户ID"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "UserStatistics - 用户统计信息"
          }
        },
        {
          "method": "GET",
          "path": "/users/by-role/:roleName",
          "summary": "根据角色获取用户列表",
          "roles": ["admin", "manager"],
          "pathParams": {
            "roleName": "string - 角色名称"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User[] - 用户列表"
          }
        },
        {
          "method": "GET",
          "path": "/users/recent-active",
          "summary": "获取最近活跃用户",
          "roles": ["admin", "manager"],
          "queryParams": {
            "days": "number (default: 7) - 天数",
            "limit": "number (default: 10) - 限制数量"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User[] - 最近活跃用户列表"
          }
        },
        {
          "method": "GET",
          "path": "/users/activity-report",
          "summary": "获取用户活动报告",
          "roles": ["admin"],
          "queryParams": {
            "startDate": "string (ISO date) - 开始日期",
            "endDate": "string (ISO date) - 结束日期"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "ActivityReport - 活动报告"
          }
        },
        {
          "method": "GET",
          "path": "/users/statistics",
          "summary": "获取用户统计信息",
          "roles": ["admin"],
          "response": {
            "message": "string - 响应消息",
            "data": "UsersStatistics - 用户统计信息"
          }
        },
        {
          "method": "GET",
          "path": "/users/:id",
          "summary": "根据ID获取用户信息",
          "roles": ["admin", "manager"],
          "pathParams": {
            "id": "number - 用户ID"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User - 用户信息"
          }
        },
        {
          "method": "PATCH",
          "path": "/users/:id",
          "summary": "更新用户信息",
          "roles": ["user", "manager", "admin"],
          "note": "普通用户只能更新自己的信息",
          "pathParams": {
            "id": "number - 用户ID"
          },
          "requestBody": {
            "username": "string (optional, min: 3, max: 50) - 用户名",
            "email": "string (optional, email format, max: 100) - 邮箱",
            "password": "string (optional, min: 6) - 密码",
            "isActive": "boolean (optional) - 是否激活"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User - 更新后的用户信息"
          }
        },
        {
          "method": "DELETE",
          "path": "/users/:id",
          "summary": "删除用户",
          "roles": ["admin"],
          "pathParams": {
            "id": "number - 用户ID"
          },
          "response": {
            "statusCode": 204,
            "message": "用户删除成功"
          }
        },
        {
          "method": "POST",
          "path": "/users/:id/roles",
          "summary": "为用户分配角色",
          "roles": ["admin"],
          "pathParams": {
            "id": "number - 用户ID"
          },
          "requestBody": {
            "roleIds": "number[] - 角色ID列表"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User - 更新后的用户信息"
          }
        },
        {
          "method": "DELETE",
          "path": "/users/:id/roles",
          "summary": "移除用户角色",
          "roles": ["admin"],
          "pathParams": {
            "id": "number - 用户ID"
          },
          "requestBody": {
            "roleIds": "number[] - 角色ID列表"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "User - 更新后的用户信息"
          }
        },
        {
          "method": "PATCH",
          "path": "/users/batch/status",
          "summary": "批量更新用户状态",
          "roles": ["admin"],
          "requestBody": {
            "userIds": "number[] - 用户ID列表",
            "isActive": "boolean - 激活状态"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "BatchUpdateResult - 批量更新结果"
          }
        }
      ]
    },
    "角色模块 (Roles)": {
      "baseRoute": "/roles",
      "endpoints": [
        {
          "method": "POST",
          "path": "/roles",
          "summary": "创建角色",
          "roles": ["admin"],
          "requestBody": {
            "name": "string (required, min: 2, max: 50) - 角色名称",
            "description": "string (optional, max: 200) - 角色描述",
            "permissions": "string[] (optional) - 权限列表",
            "isActive": "boolean (optional, default: true) - 是否激活"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Role - 创建的角色信息"
          }
        },
        {
          "method": "GET",
          "path": "/roles",
          "summary": "获取角色列表",
          "roles": ["admin", "manager"],
          "queryParams": {
            "page": "number (default: 1) - 页码",
            "limit": "number (default: 10) - 每页数量",
            "search": "string (optional) - 搜索关键词"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Role[] - 角色列表",
            "total": "number - 总数量",
            "page": "number - 当前页码",
            "limit": "number - 每页数量",
            "totalPages": "number - 总页数"
          }
        },
        {
          "method": "GET",
          "path": "/roles/active",
          "summary": "获取活跃角色列表（用于下拉选择）",
          "roles": ["admin", "manager"],
          "response": {
            "message": "string - 响应消息",
            "data": "Role[] - 活跃角色列表"
          }
        },
        {
          "method": "GET",
          "path": "/roles/permission-usage",
          "summary": "获取角色权限使用情况",
          "roles": ["admin"],
          "response": {
            "message": "string - 响应消息",
            "data": "PermissionUsage - 权限使用情况"
          }
        },
        {
          "method": "GET",
          "path": "/roles/hierarchy",
          "summary": "获取角色层次结构",
          "roles": ["admin"],
          "response": {
            "message": "string - 响应消息",
            "data": "RoleHierarchy - 角色层次结构"
          }
        },
        {
          "method": "GET",
          "path": "/roles/:id",
          "summary": "根据ID获取角色信息",
          "roles": ["admin", "manager"],
          "pathParams": {
            "id": "number - 角色ID"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Role - 角色信息"
          }
        },
        {
          "method": "GET",
          "path": "/roles/:id/statistics",
          "summary": "获取角色统计信息",
          "roles": ["admin", "manager"],
          "pathParams": {
            "id": "number - 角色ID"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "RoleStatistics - 角色统计信息"
          }
        },
        {
          "method": "PATCH",
          "path": "/roles/:id",
          "summary": "更新角色信息",
          "roles": ["admin"],
          "pathParams": {
            "id": "number - 角色ID"
          },
          "requestBody": {
            "name": "string (optional, min: 2, max: 50) - 角色名称",
            "description": "string (optional, max: 200) - 角色描述",
            "permissions": "string[] (optional) - 权限列表",
            "isActive": "boolean (optional) - 是否激活"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Role - 更新后的角色信息"
          }
        },
        {
          "method": "DELETE",
          "path": "/roles/:id",
          "summary": "删除角色",
          "roles": ["admin"],
          "pathParams": {
            "id": "number - 角色ID"
          },
          "response": {
            "statusCode": 204,
            "message": "角色删除成功"
          }
        },
        {
          "method": "POST",
          "path": "/roles/:id/duplicate",
          "summary": "复制角色",
          "roles": ["admin"],
          "pathParams": {
            "id": "number - 角色ID"
          },
          "requestBody": {
            "newName": "string - 新角色名称"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Role - 复制的角色信息"
          }
        },
        {
          "method": "DELETE",
          "path": "/roles/batch",
          "summary": "批量删除角色",
          "roles": ["admin"],
          "requestBody": {
            "ids": "number[] - 角色ID列表"
          },
          "response": {
            "statusCode": 204,
            "message": "批量删除角色成功"
          }
        },
        {
          "method": "PATCH",
          "path": "/roles/batch/status",
          "summary": "批量更新角色状态",
          "roles": ["admin"],
          "requestBody": {
            "ids": "number[] - 角色ID列表",
            "isActive": "boolean - 激活状态"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "BatchUpdateResult - 批量更新结果"
          }
        }
      ]
    },
    "用户资料模块 (Profiles)": {
      "baseRoute": "/profiles",
      "endpoints": [
        {
          "method": "POST",
          "path": "/profiles",
          "summary": "创建或更新当前用户资料",
          "roles": ["user", "manager", "admin"],
          "requestBody": {
            "realName": "string (optional, max: 50) - 真实姓名",
            "nickname": "string (optional, max: 20) - 昵称",
            "phone": "string (optional, CN phone format) - 手机号码",
            "gender": "enum (optional) - 性别: male|female|other",
            "birthday": "string (optional, ISO date) - 出生日期",
            "address": "string (optional, max: 100) - 地址",
            "bio": "string (optional, max: 200) - 个人简介",
            "avatar": "string (optional, URL format) - 头像URL",
            "company": "string (optional, max: 50) - 公司名称",
            "position": "string (optional, max: 50) - 职位名称",
            "website": "string (optional, URL format) - 个人网站",
            "wechat": "string (optional, max: 50) - 微信号",
            "qq": "string (optional, max: 50) - QQ号",
            "weibo": "string (optional, max: 50) - 微博账号"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Profile - 用户资料信息"
          }
        },
        {
          "method": "GET",
          "path": "/profiles/me",
          "summary": "获取当前用户资料",
          "roles": ["user", "manager", "admin"],
          "response": {
            "message": "string - 响应消息",
            "data": "Profile - 用户资料信息"
          }
        },
        {
          "method": "GET",
          "path": "/profiles/statistics",
          "summary": "获取资料统计信息",
          "roles": ["admin", "manager"],
          "response": {
            "message": "string - 响应消息",
            "data": "ProfileStatistics - 资料统计信息"
          }
        },
        {
          "method": "GET",
          "path": "/profiles/search",
          "summary": "搜索用户资料",
          "roles": ["admin", "manager"],
          "queryParams": {
            "keyword": "string - 搜索关键词",
            "page": "number (default: 1) - 页码",
            "limit": "number (default: 10) - 每页数量"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Profile[] - 用户资料列表",
            "total": "number - 总数量",
            "page": "number - 当前页码",
            "limit": "number - 每页数量",
            "totalPages": "number - 总页数"
          }
        },
        {
          "method": "GET",
          "path": "/profiles/recent",
          "summary": "获取最近更新的资料",
          "roles": ["admin", "manager"],
          "queryParams": {
            "limit": "number (default: 10) - 限制数量"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Profile[] - 最近更新的资料列表"
          }
        },
        {
          "method": "GET",
          "path": "/profiles/birthday-reminders",
          "summary": "获取生日提醒",
          "roles": ["admin", "manager"],
          "response": {
            "message": "string - 响应消息",
            "data": "BirthdayReminder[] - 生日提醒列表"
          }
        },
        {
          "method": "GET",
          "path": "/profiles/user/:userId",
          "summary": "根据用户ID获取资料（管理员权限）",
          "roles": ["admin", "manager"],
          "pathParams": {
            "userId": "number - 用户ID"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Profile - 用户资料信息"
          }
        },
        {
          "method": "GET",
          "path": "/profiles/:id",
          "summary": "根据资料ID获取详情",
          "roles": ["user", "manager", "admin"],
          "note": "只有管理员、经理或本人可以查看",
          "pathParams": {
            "id": "number - 资料ID"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Profile - 资料详情"
          }
        },
        {
          "method": "PATCH",
          "path": "/profiles/me",
          "summary": "更新当前用户资料",
          "roles": ["user", "manager", "admin"],
          "requestBody": {
            "realName": "string (optional, max: 50) - 真实姓名",
            "nickname": "string (optional, max: 20) - 昵称",
            "phone": "string (optional, CN phone format) - 手机号码",
            "gender": "enum (optional) - 性别: male|female|other",
            "birthday": "string (optional, ISO date) - 出生日期",
            "address": "string (optional, max: 100) - 地址",
            "bio": "string (optional, max: 200) - 个人简介",
            "avatar": "string (optional, URL format) - 头像URL",
            "company": "string (optional, max: 50) - 公司名称",
            "position": "string (optional, max: 50) - 职位名称",
            "website": "string (optional, URL format) - 个人网站",
            "wechat": "string (optional, max: 50) - 微信号",
            "qq": "string (optional, max: 50) - QQ号",
            "weibo": "string (optional, max: 50) - 微博账号"
          },
          "response": {
            "message": "string - 响应消息",
            "data": "Profile - 更新后的用户资料"
          }
        },
        {
          "method": "PATCH",
          "path": "/profiles/user/:userId",
          "summary": "更新指定用户资料（管理员权限）",
          "roles": ["admin"],
          "pathParams": {
            "userId": "number - 用户ID"
          },
          "requestBody": {
            "realName": "string (optional, max: 50) - 真实姓名",
            "nickname": "string (optional, max: 20) - 昵称",
            "phone": "string (optional, CN phone format) - 手机号码",
            "gender": "enum (optional) - 性别: male|female|other",
            "birthday": "string (optional, ISO date) - 出生日期",
            "address": "string (optional, max: 100) - 地址",
            "bio": "string (optional, max: 200) - 个人简介",
            "avatar": "string (optional, URL format) - 头像URL",
            "company": "string (optional, max: 50) - 公司名称",
            "position": "string (optional, max: 50) - 职位名称",
            "website": "string (optional, URL format) - 个人网站",
            "wechat": "string (optional, max: 50) - 微信号",
            "qq": "string (optional, max: 50) - QQ号",
            "weibo": "string (optional, max: 50) - 微博账号"
          },
          "response": {
